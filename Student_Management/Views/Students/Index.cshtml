@model IEnumerable<Student_Management.Models.Student>

@{
    ViewData["Title"] = "Students List";
}

<h1>Students List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get" class="form-row mb-3">
    <div class="col-md-3">
        <input type="text" name="searchString" class="form-control" placeholder="Search by name or address" />
    </div>
    <div class="col-md-3">
        <input type="number" step="0.01" name="gpa" class="form-control" placeholder="Enter GPA" />
    </div>
    <div class="col-md-2">
        <input type="submit" value="Search" class="btn btn-secondary" />
    </div>
</form>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>GPA</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentId</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Address</td>
                <td>@item.GPA</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-right mb-3">
    <div>
        <a asp-action="Index" asp-route-sortOrder="@ViewData["GpaSortOrder"]" class="btn btn-secondary">
            Sort by GPA
        </a>
        <a asp-action="Index" asp-route-sortOrder="name_asc" class="btn btn-secondary ml-2">
            Sort by First Name
        </a>
    </div>
</div>



